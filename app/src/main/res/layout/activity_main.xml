<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="lugang.app.huansi.net.lugang.activity.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorMainBackground"
        android:layout_width="0dp"
        android:layout_weight="1.3"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="centerCrop"
            android:background="@drawable/langpa"
            android:layout_width="wrap_content"
            android:layout_height="80dp"/>


        <RadioGroup
            android:id="@+id/rgBase"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RadioButton
                android:button="@null"
                android:background="@drawable/btn_check_selector"
                android:id="@+id/taskShow"
                android:textSize="24sp"
                android:gravity="center"
                android:text="任务看板"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorMainBackgroundText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:button="@null"
                android:background="@drawable/btn_check_selector"
                android:layout_marginTop="5dp"
                android:textSize="24sp"
                android:gravity="center"
                android:id="@+id/measureCustom"
                android:text="量体定制"
                android:textColor="@color/colorMainBackgroundText"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:button="@null"
                android:background="@drawable/btn_check_selector"
                android:layout_marginTop="5dp"
                android:textSize="24sp"
                android:gravity="center"
                android:id="@+id/repairRegister"
                android:text="返修登记"
                android:textColor="@color/colorMainBackgroundText"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:button="@null"
                android:background="@drawable/btn_check_selector"
                android:layout_marginTop="5dp"
                android:textSize="24sp"
                android:gravity="center"
                android:id="@+id/materialsChose"
                android:text="面料选置"
                android:textColor="@color/colorMainBackgroundText"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:button="@null"
                android:id="@+id/partMake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="24sp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/btn_check_selector"
                android:text="部位做法"
                android:textColor="@color/colorMainBackgroundText"/>

            <RadioButton
                android:button="@null"
                android:background="@drawable/btn_check_selector"
                android:layout_marginTop="5dp"
                android:id="@+id/customerConfirm"
                android:textSize="24sp"
                android:gravity="center"
                android:text="客户确认"
                android:textColor="@color/colorMainBackgroundText"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/btn_buy_selector"
                android:id="@+id/btnDownBaseData"
                android:textSize="24sp"
                android:gravity="center"
                android:text="下载"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_margin="5dp"
                android:background="@drawable/btn_buy_selector"
                android:id="@+id/btnUploadMain"
                android:textSize="24sp"
                android:gravity="center"
                android:text="上传"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:background="@color/colorMainBackgroundText"
        android:layout_width="3dp"
        android:layout_height="wrap_content"/>




    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">
    </FrameLayout>
</LinearLayout>
</layout>
