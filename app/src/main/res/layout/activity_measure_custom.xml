<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#383F51">
            <ImageView
                android:layout_marginLeft="30dp"
                android:scaleType="centerCrop"
                android:background="@drawable/palang"
                android:layout_width="80dp"
                android:layout_height="50dp"/>
            <TextView
                android:gravity="center"
                android:id="@+id/dateRecord"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="量体数据录入"
                android:textColor="#D1BEB0"
                android:textSize="24sp"/>
            <TextView
                android:gravity="center"
                android:id="@+id/customName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_below="@id/dateRecord"
                android:layout_marginTop="5dp"
                android:text="银行事业部张三"
                android:textColor="#D1BEB0"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btnSaveMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_buy_selector"
                android:text="上传服务器"
                android:textColor="#fff"/>
        </LinearLayout>
        <HorizontalScrollView
            android:id="@+id/hsCloth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/llCloth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>
        </HorizontalScrollView>
    </LinearLayout>
</layout>