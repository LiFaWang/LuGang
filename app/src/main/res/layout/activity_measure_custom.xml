<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF45C4FF">

            <TextView
                android:id="@+id/dateRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="量体数据录入"
                android:textColor="#fff"
                android:textSize="20sp"/>

            <TextView

                android:id="@+id/customName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateRecord"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="银行事业部张三"
                android:textColor="#fff"
                android:textSize="18sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_buy_selector"
                android:text="保存"
                android:textColor="#fff"/>
        </RelativeLayout>

        <!--<android.support.v4.view.ViewPager-->
        <!--android:id="@+id/vpCloth"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <!--</android.support.v4.view.ViewPager>-->
        <HorizontalScrollView
            android:id="@+id/hsCloth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/llCloth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>
</layout>