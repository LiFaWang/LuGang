<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#383F51">

        <Button
            android:id="@+id/btnNewMeasure"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_buy_selector"
            android:gravity="center"
            android:text="新 增"
            android:visibility="invisible"
            android:textColor="#fff"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/btnNewMeasure"
            android:background="@drawable/btn_buy_selector"
            android:text="查 询"
            android:textColor="#fff"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/orderSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/btnSearch"
            android:background="@drawable/bg_edittext_selector"
            android:hint="编号查询"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/spElement"
            android:layout_width="150dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/orderSearch"
            />

        <Spinner
            android:id="@+id/spDepartment"
            android:layout_width="150dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/spElement"
            />



    </RelativeLayout>
    <LinearLayout
        android:background="#383F51"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="单位名称"
            android:textColor="#fff"/>

        <TextView
            android:textColor="#fff"
            android:text="地区"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#fff"
            android:text="地市"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#fff"
            android:text="县市"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#fff"
            android:text="部门名称"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#fff"
            android:text="姓名"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#fff"
            android:text="状态"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <!--<LinearLayout-->
        <!--android:id="@+id/llCustomer"-->
        <!--android:orientation="vertical"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
    <!--</LinearLayout>-->
<ListView
    android:id="@+id/lvCustomer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</ListView>
</LinearLayout>
</layout>