<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="#383F51"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckedTextView
                android:id="@+id/startMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/selector_bg_message_tag"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="待 量 体"
                android:textColor="@drawable/selector_text_color_message_tag"
                android:textSize="22sp"/>

            <CheckedTextView
                android:id="@+id/finishMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/selector_bg_message_tag"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="已 量 体"
                android:textColor="@drawable/selector_text_color_message_tag"
                android:textSize="22sp"/>
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/vpMeasureCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v4.view.ViewPager>
    </LinearLayout>
</layout>